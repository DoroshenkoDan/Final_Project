{
    "version": 2,
    "builds": [
        {
            "src": "client/build",
            "use": "@vercel/static-build",
            "config": { "distDir": "client/.next" }
        },
        {
            "src": "server/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}